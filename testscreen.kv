#: import FadeTransition kivy.uix.screenmanager.FadeTransition
# <Widget>:
#     background_normal: ''
#     background_color: (0,0,0,1)
#Global settings for widgets

<Label>:
    color: (0.349, 0.776, 1.0, 1.0)
    background_normal: ' '
    font_name: 'Arial'
    font_size: 24
    texture_size: self.size
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<Button>:
    background_color: (.90, .90, .90, 1)
    background_normal: ''
    font_name:'Arial'
    font_size: 40
    color: (0.349, 0.776, 1.0, 1.0)
    halign: 'left'
    valign: 'middle'
    padding_x: 20

<BoxLayout>:
    orientation: 'vertical'
    spacing: 2

# Add screens to screen manager here
ScreenManagement:
    #transition: FadeTransition()
    MenuScreen:
    AlarmScreen:
    ForecastScreen:
    QuitScreen:
    RadioScreen:
    SetAlarm:
    ViewAlarm:
    CurrentForecast:


<MenuScreen>:
    name: 'Menu'
    BoxLayout:
        # orientation: 'vertical'
        # spacing: 5
        DisplayTime:
            size_hint: 1, 2
            Label:
                id: clock
                text: app.time
                font_size: 100
                # font_name: 'Arial'
                # halign: 'center'
                # valign: 'middle'
        Button:
            # size_hint: .25, .2
            # pos: 0, 0
            text: 'Alarm'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Alarm'
        Button:
            # size_hint: .25, .2
            # pos: 200,0
            text: 'Forecast'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Forecast'
        Button:
            # size_hint: .25, .2
            # pos: 400, 0
            text: 'Radio'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Radio'
        Button:
            # size_hint: .25, .2
            # pos: 600, 0
            text: 'Quit'
            on_press:
                root.manager.transition.direction = 'up'
                root.manager.current = 'Quit'

<AlarmScreen>:
    name:'Alarm'
    BoxLayout:
        # orientation: 'vertical'
        Button:
            text:'Set Alarm'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'SetAlarm'
        Button:
            text: 'View Alarms'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'ViewAlarm'
        Button:
            text:'Back to Menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Menu'

<ForecastScreen>:
    name: 'Forecast'
    BoxLayout:
        # orientation: 'vertical'
        Button:
            text: 'Get Forecast'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'CurrentForecast'
        Button:
            text: 'Back to menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Menu'

<RadioScreen>:
    name: 'Radio'
    BoxLayout
        # orientation: 'vertical'
        Button:
            id: 'btn1'
            text: 'Play Radio'
        Button:
            text: 'Change Station'
        Button:
            text: 'Back to Menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Menu'

<QuitScreen>:
    name:'Quit'
    BoxLayout:
        # orientation: 'vertical'
        Label:
            text: 'Are you sure you want to quit?'
        Button:
            text: 'No'
            on_press:
                root.manager.transition.direction = 'down'
                root.manager.current = 'Menu'
        Button:
            text: 'Yes'
            on_press: exit()

<SetAlarm>:
    name:'SetAlarm'
    BoxLayout:
        # orientation: 'vertical'
        Label:
            text: 'Hello World'
        Button:
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Alarm'

<ViewAlarm>:
    name:'ViewAlarm'
    BoxLayout:
        # orientation: 'vertical'
        Label:
            text: 'OI HAI! '
        Button:
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Alarm'


<CurrentForecast>:
    name: 'CurrentForecast'
    BoxLayout:
        # orientation: 'vertical'
        Label:
            text: root.current_forecast()
        Button:
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Forecast'
