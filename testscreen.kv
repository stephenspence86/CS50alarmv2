#: import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    #transition: FadeTransition()
    MenuScreen:
    AlarmScreen:
    ForecastScreen:
    QuitScreen:
    RadioScreen:
    SetAlarm:
    ViewAlarm:
    CurrentForecast:


<MenuScreen>:
    name: 'Menu'
    clock: clock

    BoxLayout:
        orientation: 'vertical'
        DisplayTime:
            Label:
                id: clock
                text: app.time
        Button:
            text: 'Goto Alarm'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Alarm'
        Button:
            text: 'Goto Forecast'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Forecast'
        Button:
            text: 'Goto Radio'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Radio'
        Button:
            text: 'Quit'
            on_press:
                root.manager.transition.direction = 'up'
                root.manager.current = 'Quit'

<AlarmScreen>:
    name:'Alarm'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text:'Set Alarm'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'SetAlarm'
        Button:
            text: 'View Alarms'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'ViewAlarm'
        Button:
            text:'Back to Menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Menu'

<ForecastScreen>:
    name: 'Forecast'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Get Forecast'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'CurrentForecast'
        Button:
            text: 'Back to menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Menu'

<RadioScreen>:
    name: 'Radio'
    BoxLayout
        orientation: 'vertical'
        Button:
            id: 'btn1'
            text: 'Play Radio'
        Button:
            text: 'Change Station'
        Button:
            text: 'Back to Menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Menu'

<QuitScreen>:
    name:'Quit'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Are you sure you want to quit?'
        Button:
            text: 'No'
            on_press:
                root.manager.transition.direction = 'down'
                root.manager.current = 'Menu'
        Button:
            text: 'Yes'
            on_press: exit()

<SetAlarm>:
    name:'SetAlarm'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Hello World'
        Button:
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Alarm'

<ViewAlarm>:
    name:'ViewAlarm'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'OI HAI! '
        Button:
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Alarm'


<CurrentForecast>:
    name: 'CurrentForecast'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.current_forecast()
        Button:
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Forecast'
